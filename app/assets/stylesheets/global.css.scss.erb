/* Chrome, Safari, Opera */
@-webkit-keyframes cloud-anim {
  // 0%   {opacity: 0.1; left:-5%; top:0%;}
  // 17%  {opacity: 0.16}
  // 33%  {opacity: 0.21}
  // 40%  {opacity: 0.25}
  // 55%  {opacity: 0.20}
  // 68%  {opacity: 0.17}
  // 74%  {opacity: 0.21}
  // 84%  {opacity: 0.25}
  // 93%  {opacity: 0.18}
  // 100%  {opacity: 0.14; left:100%; top:0%;}
  0%   {opacity: 0; top: 0%; }
  50%  {opacity: 1; top: 3%;}
  100%  {opacity: 0; top: 6%;}
}

/* Standard syntax */
@keyframes cloud-anim {
  0%   {opacity: 0.1; left:-5%; top: 0%;}
  100%  {opacity: 0.14; left:100%; top:0%;}
}

.cloud{
  position: relative;
  display: -webkit-inline-box;

  -webkit-animation-name: cloud-anim;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-play-state: running;

  /* Standard syntax */
  animation-name: cloud-anim;
  animation-iteration-count: infinite;
  animation-play-state: running;

  -webkit-animation-duration: 5s;
  animation-duration: 5s;

  &#cld1-1 {
    width: 300px;
    height: 100px;
    margin-left: 20%;
  }
  &#cld1-2{
    width: 500px;
    height: 200px;
    margin-left: 20%;
    -webkit-animation-delay: 1s; /* Chrome, Safari, Opera */
    animation-delay: 1s;
  }
  &#cld1-1, &#cld1-2{
    position: absolute;
    background: image-url('clouds/cloud1.png') no-repeat center;
    background-size: contain;
    -webkit-animation-timing-function: cubic-beizer(0.53,0.69,0.77,0.6);
    -moz-animation-timing-function: cubic-beizer(0.53,0.69,0.77,0.6);
    animation-timing-function: cubic-beizer(0.53,0.69,0.77,0.6);
  }
  &#cld2-1 {
    width: 300px;
    height: 100px;
    margin-left: 40%;
  }
  &#cld2-2{
    width: 400px;
    height: 200px;
    margin-left: 40%;
    -webkit-animation-delay: 1s; /* Chrome, Safari, Opera */
    animation-delay: 1s;
  }
  &#cld2-1, &#cld2-2{
    position: absolute;
    background: image-url('clouds/cloud2.png') no-repeat center;
    background-size: contain;
    -webkit-animation-timing-function: ease;
    -moz-animation-timing-function: ease;
    animation-timing-function: ease;
  }
  &#cld3-1 {
    width: 300px;
    height: 100px;
    margin-left: 60%;
  }
  &#cld3-2{
    width: 400px;
    height: 200px;
    margin-left: 60%;
    -webkit-animation-delay: 1s; /* Chrome, Safari, Opera */
    animation-delay: 1s;
  }
  &#cld3-1, &#cld3-2{
    position: absolute;
    background: image-url('clouds/cloud1.png') no-repeat center;
    background-size: contain;
    -webkit-animation-timing-function: ease;
    -moz-animation-timing-function: ease;
    animation-timing-function: ease;
  }
}

