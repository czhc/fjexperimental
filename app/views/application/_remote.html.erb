<div class="row" id="logo">
  <a href="/">
    <%= image_tag 'logo.png', class: "img-responsive center-block" %>
  </a>
</div>
<div class="row">
  <div class="col-lg-12" id="disp-cont" >
    <div class="row" id="temp">
      <div class="col-lg-3" id="remote-icons">
        <ul class="list-unstyled">
          <li><%= fa_icon "adjust" %></li>
          <li><%= fa_icon "bed" %></li>
          <li><%= fa_icon "leaf"%></li>
          <li><%= fa_icon "fire" %></li>
          <li><%= fa_icon "globe"%></li>
        </ul>
      </div> 
      <div class="col-lg-9" id="val">
        <div class="col-lg-7 sub-val"><span></span></div>
        <div class="col-lg-3 sub-deg">
          <span>&deg;</span><span>C</span>            
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12" id="fan-cont">  
    <div class="col-lg-3 nopadding" id="fan-logo">
      <%= fa_icon 'cloud' %>
    </div>
    <div class="col-lg-9 nopadding" id="bar-cont">
      <ul class="list-unstyled list-inline" id="scale">
      </ul>                
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12" id="ctrl-cont">
    <div class="col-md-6 col-lg-6">
      <a href="#" class="cs-fn js-fn" id="fn"><span>FAN</span></a>
    </div>
    <div class="col-md-6 col-lg-6 nopadding">
      <div class="col-md-6 col-lg-6 nopadding">
        <a href="#" class="cs-ctrl js-ctrl" id="up">
          <%= image_tag 'buttonup.png', class: "img-responsive center-block" %>
        </a>
      </div>
      <div class="col-md-6 col-lg-6 nopadding">
        <a href="#" class="cs-ctrl js-ctrl" id="down">
          <%= image_tag 'buttondown.png', class: "img-responsive center-block" %>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="row sub-vid">
  <ul class="list-unstyled">
    <li class="svchild">
      <div class="video-container">
        <%= video_tag "",class: 'sub img-responsive center-block', id: '1', preload: true %>
      </div>
    </li>
    <li class="svchild">      
      <div class="video-container">
        <%= video_tag "",class: 'sub img-responsive center-block', id: '2', preload: true %>
      </div>
    </li>
    <li class="svchild">      
      <div class="video-container">
        <%= video_tag "",class: 'sub img-responsive center-block', id: '3', preload: true %>
      </div>
    </li>
    <li class="svchild">
      <div class="video-container">
        <%= video_tag "",class: 'sub img-responsive center-block', id: '4', preload: true %>
      </div>
    </li>
  </ul>
</div>
